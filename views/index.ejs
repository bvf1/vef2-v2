<%- include('header') -%>
  <h1><%= title %></h1>
  <div class="main">
    <h2>Viðburðir á næstunni</h2>
    <div>
      <% if (events.length === 0) { %>
        <p>Engin event!</p>
      <% } else { %>
        <ul>
          <% events.forEach((event) => { %>
            <li>
              <b><a href="/event/<%= event.slug %>"><%= event.name %></a></b>
              <p><%= event.description %></p>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

  </div>
  <div class="foot">
    <a href="/admin/login">Innskránining stjórnanda</a>
  </div>

<%- include('footer') -%>
